@model Proyecto.Models.Receta

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm(""))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Receta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label>Selecciona el producto del cual se creara la receta</label>
                <br/>
                <select name="idProducto" value="" class="input-group">
                    <option value="">Elige un producto</option>
                    @if (ViewBag.Productos != null)
                    {
                        foreach (var producto in ViewBag.Productos)
                        {
                            <option value=@producto.ProductoId>@producto.Nombre</option>
                        }
                    }

                </select>
            </div>
            <br />
            <div class="col">
                <label>Selecciona tus ingredientes </label>
                  <br />
                @for (int i = 0; i < ViewBag.MaxIngredientes; i++)
                {
                    <br />
                    <div class="row">

                        <div class="col-sm-4">
                            <label> Ingrediente numero @(i + 1)</label>
                            <select name=@("Ingrediente"+i) value="" class="input-group">

                                @if (ViewBag.MateriasPrimas != null)
                                {

                                    <option value="">Elige un ingrediente</option>
                                    foreach (var materia in ViewBag.MateriasPrimas)
                                    {
                                        <option value=@materia.MateriaPrimaId>@materia.Nombre.ToString().ToUpper() ___Unidad:@materia.Unidad.ToString().ToUpper()</option>
                                    }
                                }
                            </select>

                        </div>
                        <div class="col-sm-4">
                            <label>Cantidad</label>
                            <input class="input-group" type="number" value="" name=@("Unidad"+i) />
                        </div>
                        <div class="col-sm-4">
                          
                        </div>
                    </div>
                        }

                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
        </div>
    </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
