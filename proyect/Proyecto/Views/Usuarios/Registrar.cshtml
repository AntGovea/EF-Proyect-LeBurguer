@model Proyecto.Models.Usuario

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar</h2>
<h5 style="color: red">@ViewBag.Message</h5>

